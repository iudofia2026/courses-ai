# AI Course Scheduler - Backend Environment Variables
# Copy this file to .env and update with your values

# ================================
# OpenAI API Configuration
# ================================
# Your OpenAI API key (required for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use for AI features
OPENAI_MODEL=gpt-4-turbo-preview

# OpenAI API temperature (0.0-2.0, lower = more deterministic)
OPENAI_TEMPERATURE=0.1

# Maximum tokens for OpenAI API responses
OPENAI_MAX_TOKENS=2000

# OpenAI API timeout in seconds
OPENAI_TIMEOUT=30

# OpenAI organization ID (if applicable)
OPENAI_ORG_ID=

# ================================
# FastAPI Application Configuration
# ================================
# Application environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (show detailed errors, reload code)
DEBUG=true

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# API title and version
API_TITLE=AI Course Scheduler API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered course search and scheduling API

# ================================
# CORS Configuration
# ================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173", "http://127.0.0.1:5173"]

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# Allowed HTTP methods for CORS
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]

# Allowed headers for CORS
CORS_ALLOW_HEADERS=["*"]

# ================================
# CourseTable API Configuration
# ================================
# CourseTable GraphQL API URL
COURSETABLE_API_URL=https://graph.coursetable.com/api/v1/graphql

# CourseTable API timeout in seconds
COURSETABLE_TIMEOUT=10

# Number of retry attempts for CourseTable API
COURSETABLE_RETRIES=3

# CourseTable API authentication (if required)
COURSETABLE_API_KEY=

# ================================
# Redis Configuration (Optional)
# ================================
# Redis connection URL (for caching)
REDIS_URL=redis://localhost:6379

# Redis password (if required)
REDIS_PASSWORD=

# Redis database number
REDIS_DB=0

# Default TTL for cached items in seconds
REDIS_TTL=300

# Connection pool settings
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5

# ================================
# Database Configuration (Optional - for future features)
# ================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/courses_ai

# Database connection pool size
DB_POOL_SIZE=20

# Database max overflow connections
DB_MAX_OVERFLOW=30

# Database connection timeout
DB_CONNECTION_TIMEOUT=30

# ================================
# Logging Configuration
# ================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=json

# Log file path (optional, defaults to stdout)
LOG_FILE=

# Enable structured logging
STRUCTURED_LOGGING=true

# Log rotation settings
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ================================
# Rate Limiting Configuration
# ================================
# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Number of requests allowed per time window
RATE_LIMIT_REQUESTS=100

# Time window in seconds for rate limiting
RATE_LIMIT_WINDOW=3600

# Rate limiting strategy (fixed_window, sliding_window, token_bucket)
RATE_LIMIT_STRATEGY=fixed_window

# Enable rate limiting by IP address
RATE_LIMIT_BY_IP=true

# Whitelist for rate limiting (comma-separated IPs)
RATE_LIMIT_WHITELIST=

# Blacklist for rate limiting (comma-separated IPs)
RATE_LIMIT_BLACKLIST=

# ================================
# Search Configuration
# ================================
# Maximum number of search results to return
SEARCH_MAX_RESULTS=100

# Enable search result caching
SEARCH_CACHE_ENABLED=true

# Cache TTL for search results in seconds
SEARCH_CACHE_TTL=300

# Enable AI-powered search
AI_SEARCH_ENABLED=true

# Default search season code
DEFAULT_SEASON_CODE=202401

# Supported season codes (comma-separated)
SUPPORTED_SEASONS=202401,202402,202403,202501,202502,202503

# Search fields to query (comma-separated)
SEARCH_FIELDS=title,description,areas,skills,department,professors.name

# Search result relevance threshold
SEARCH_RELEVANCE_THRESHOLD=0.5

# ================================
# Schedule Generation Configuration
# ================================
# Maximum number of schedule options to generate
SCHEDULE_MAX_OPTIONS=20

# Schedule generation timeout in seconds
SCHEDULE_TIMEOUT_SECONDS=30

# Minimum quality score for schedules
SCHEDULE_QUALITY_THRESHOLD=50.0

# Maximum number of courses per schedule
SCHEDULE_MAX_COURSES=10

# Minimum credits per schedule
SCHEDULE_MIN_CREDITS=3

# Maximum credits per schedule
SCHEDULE_MAX_CREDITS=6

# Enable schedule optimization features
SCHEDULE_OPTIMIZATION_ENABLED=true

# ================================
# AI Service Configuration
# ================================
# AI service timeout in seconds
AI_SERVICE_TIMEOUT=30

# Maximum concurrent AI requests
AI_MAX_CONCURRENT_REQUESTS=10

# AI request queue size
AI_QUEUE_SIZE=100

# Enable AI request caching
AI_CACHE_ENABLED=true

# AI cache TTL in seconds
AI_CACHE_TTL=3600

# ================================
# Monitoring and Health Checks
# ================================
# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Enable metrics collection
METRICS_ENABLED=false

# Metrics endpoint path
METRICS_PATH=/metrics

# Enable performance monitoring
PERFORMANCE_MONITORING_ENABLED=false

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=10

# ================================
# Security Configuration
# ================================
# Enable trusted host middleware
TRUSTED_HOST_ENABLED=false

# Trusted hosts (comma-separated)
TRUSTED_HOSTS=localhost,127.0.0.1

# Enable API key authentication
API_KEY_AUTH_ENABLED=false

# Required API keys (comma-separated)
REQUIRED_API_KEYS=

# Enable JWT authentication
JWT_AUTH_ENABLED=false

# JWT secret key
JWT_SECRET_KEY=your_super_secret_jwt_key_here

# JWT algorithm
JWT_ALGORITHM=HS256

# JWT expiration time in minutes
JWT_EXPIRATION_MINUTES=1440

# ================================
# External Services Configuration
# ================================
# Email service configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# SMS service configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# File storage configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ================================
# Development Configuration
# ================================
# Enable auto-reload for development
AUTO_RELOAD=true

# Enable development tools
DEV_TOOLS_ENABLED=true

# Enable profiling
PROFILING_ENABLED=false

# Mock external services for development
MOCK_EXTERNAL_SERVICES=false

# Development database URL (overrides DATABASE_URL in development)
DEV_DATABASE_URL=sqlite:///./dev.db

# ================================
# Performance Configuration
# ================================
# Enable request compression
COMPRESSION_ENABLED=true

# Compression level (1-9)
COMPRESSION_LEVEL=6

# Minimum response size for compression in bytes
COMPRESSION_THRESHOLD=1000

# Enable response caching
RESPONSE_CACHE_ENABLED=true

# Response cache TTL in seconds
RESPONSE_CACHE_TTL=300

# Enable connection pooling
CONNECTION_POOLING_ENABLED=true

# Maximum connections in pool
MAX_POOL_SIZE=100

# ================================
# Feature Flags
# ================================
# Enable experimental features
EXPERIMENTAL_FEATURES_ENABLED=false

# Enable beta features
BETA_FEATURES_ENABLED=true

# Enable admin features
ADMIN_FEATURES_ENABLED=false

# Enable analytics features
ANALYTICS_FEATURES_ENABLED=false

# Enable user accounts
USER_ACCOUNTS_ENABLED=false

# Enable course recommendations
RECOMMENDATIONS_ENABLED=true

# Enable social features
SOCIAL_FEATURES_ENABLED=false