# AI Course Scheduler - Frontend Environment Variables
# Copy this file to .env and update with your values

# ================================
# API Configuration
# ================================
# URL of the backend API server
VITE_API_URL=http://localhost:8000

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable API request retries
VITE_API_RETRY_ENABLED=true
VITE_API_RETRY_ATTEMPTS=3

# ================================
# Application Settings
# ================================
# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application version (displayed in UI)
VITE_APP_VERSION=1.0.0

# Enable debugging mode
VITE_DEBUG=true

# ================================
# Feature Flags
# ================================
# Enable Google Analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable Sentry error tracking
VITE_ENABLE_SENTRY=false

# Enable user analytics and tracking
VITE_ENABLE_USER_TRACKING=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable course recommendations
VITE_ENABLE_RECOMMENDATIONS=true

# Enable advanced search features
VITE_ENABLE_ADVANCED_SEARCH=true

# Enable schedule optimization
VITE_ENABLE_SCHEDULE_OPTIMIZATION=true

# ================================
# UI/UX Settings
# ================================
# Theme (light, dark, auto)
VITE_THEME=light

# Enable animations and transitions
VITE_ENABLE_ANIMATIONS=true

# Enable tooltips and help text
VITE_ENABLE_HELP_TEXT=true

# Default number of search results
VITE_DEFAULT_SEARCH_LIMIT=20

# Maximum search results per page
VITE_MAX_SEARCH_RESULTS=100

# ================================
# External Services Configuration
# ================================
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Algolia search API key (if using Algolia)
VITE_ALGOLIA_API_KEY=

# Algolia application ID
VITE_ALGOLIA_APP_ID=

# ================================
# Development Settings
# ================================
# Enable development mode
VITE_DEV_MODE=true

# Enable hot module replacement
VITE_HMR_ENABLED=true

# Enable React DevTools
VITE_REACT_DEVTOOLS=true

# Enable verbose logging
VITE_VERBOSE_LOGGING=true

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# ================================
# Performance Settings
# ================================
# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable lazy loading
VITE_ENABLE_LAZY_LOADING=true

# Cache API responses (in milliseconds)
VITE_API_CACHE_TTL=300000

# Debounce search input (in milliseconds)
VITE_SEARCH_DEBOUNCE=300

# ================================
# Error Handling
# ================================
# Show detailed error messages in development
VITE_SHOW_DETAILED_ERRORS=true

# Enable error boundary fallback UI
VITE_ENABLE_ERROR_BOUNDARY=true

# Global error notification duration (in milliseconds)
VITE_ERROR_NOTIFICATION_DURATION=5000

# ================================
# Security Settings
# ================================
# Enable content security policy headers
VITE_ENABLE_CSP=false

# Rate limiting for API requests (requests per minute)
VITE_RATE_LIMIT_PER_MINUTE=60

# ================================
# Localization
# ================================
# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,zh

# ================================
# Third-party Integrations
# ================================
# OpenAI API for AI features (client-side - be careful with exposure)
VITE_OPENAI_API_KEY=

# Mapbox API key for maps (if using location features)
VITE_MAPBOX_API_KEY=

# Stripe publishable key (if handling payments)
VITE_STRIPE_PUBLISHABLE_KEY=

# ================================
# Testing Configuration
# ================================
# Enable test environment
VITE_TEST_MODE=false

# Mock user authentication for testing
VITE_MOCK_AUTH=false

# Test API base URL
VITE_TEST_API_URL=http://localhost:8001

# ================================
# Browser Support
# ================================
# Target browser versions (Vite configuration will use this)
VITE_BROWSER_TARGET=chrome87,firefox78,safari14,edge88

# ================================
# Build Configuration
# ================================
# Build output directory
VITE_BUILD_DIR=dist

# Enable source maps in production
VITE_SOURCEMAP_PROD=false

# Minify HTML/CSS/JS
VITE_MINIFY=true

# Asset inline limit (in bytes)
VITE_ASSET_INLINE_LIMIT=4096